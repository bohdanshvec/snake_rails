<div id="field" class="ascii-block" data-game-over="<%= game_over %>">
  <% if @text_game_over %>
    <div class="fs-6 ms-2 mt-1">
      <span class="text-danger"><%= @text_game_over %></span>
      <% if @game.apples_count > 0 %>
        <br>
        <span style="color: green;"><%= t('.text') %>: <%= @snake.count - 6 %></span>
      <% end %>
    </div>
  <% end %>

  <div class="ascii-grid-container px-2">
    <% field.each do |row| %>
      <div class="ascii-grid-row">
        <% row.each_char do |cell| %>
          <span class="ascii-grid-cell"><%= cell %></span>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="d-flex flex-column align-items-center mt-3 gap-2">
    <div class="d-flex justify-content-center gap-2">
      <button class="btn btn-outline-primary btn-sm px-3" data-direction="up">↑</button>
    </div>
    <div class="d-flex justify-content-center gap-2">
      <button class="btn btn-outline-primary btn-sm px-3" data-direction="left">←</button>
      <button class="btn btn-outline-primary btn-sm px-3" data-direction="down">↓</button>
      <button class="btn btn-outline-primary btn-sm px-3" data-direction="right">→</button>
    </div>
  </div>
</div>
