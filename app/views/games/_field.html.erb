<div id="field" class="ascii-block" data-game-over="<%= game_over %>">

  <% if @text_game_over %>
    <div class="fs-6 ms-2 mt-1">
      <span class="text-danger"><%= @text_game_over %></span>
      <% if @game.apples_count > 0 %>
        <br>
        <span class="text-success"><%= t('.text') %>: <%= @snake.count - 6 %></span>
      <% end %>
    </div>
  <% end %>

  <div class="ascii-grid-container px-2">
    <% field.each do |row| %>
      <div class="ascii-grid-row">
        <% row.each_char do |cell| %>
          <span class="ascii-grid-cell"><%= cell %></span>
        <% end %>
      </div>
    <% end %>
  </div>

</div>
